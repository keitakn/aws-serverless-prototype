{
  "name": "aws-serverless-prototype",
  "version": "0.1.0",
  "description": "Serverless CRUD Prototype",
  "scripts": {
    "test": "mocha -t 30000 -R nyan --compilers ts:ts-node/register",
    "test:all": "yarn run test -- src/tests/**/*.test.ts",
    "test:local": "IS_LOCAL=true mocha -t 30000 --compilers ts:ts-node/register",
    "test:all:local": "yarn run test:local -- src/tests/**/*.test.ts",
    "test:coverage": "IS_LOCAL=true nyc --extension .ts mocha -t 30000 --compilers ts:ts-node/register",
    "coverage:report:html": "nyc report --reporter=html",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "lint:fix": "tslint -c tslint.json --fix src/**/*.ts",
    "build": "tsc",
    "build:watch": "tsc -w",
    "dynamodb": "serverless dynamodb start",
    "migrate": "serverless dynamodb migrate",
    "server": "yarn run build && serverless offline",
    "debug": "tsc && node --inspect node_modules/.bin/serverless offline start",
    "deploy": "yarn run build && serverless deploy -v"
  },
  "author": "keita-nishimoto",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^0.0.16",
    "@types/chai": "^4.0.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.19",
    "@types/source-map": "^0.5.1",
    "@types/source-map-support": "^0.4.0",
    "@types/uuid": "^3.4.0",
    "aws-sdk": "^2.94.0",
    "chai": "^4.1.1",
    "mocha": "^3.5.0",
    "nyc": "^11.1.0",
    "serverless": "^1.19.0",
    "serverless-dynamodb-local": "^0.2.22",
    "serverless-offline": "^3.15.3",
    "ts-loader": "^2.3.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "axios": "^0.16.1",
    "jsonschema": "^1.1.1",
    "source-map-support": "^0.4.15",
    "uuid": "^3.0.1"
  }
}
